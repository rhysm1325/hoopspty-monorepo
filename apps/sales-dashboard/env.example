# HoopsPty Sales Dashboard - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="HoopsPty Sales Dashboard"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# AIRCALL INTEGRATION
# =============================================================================
# AirCall API credentials
AIRCALL_API_ID=your-aircall-api-id
AIRCALL_API_TOKEN=your-aircall-api-token
AIRCALL_WEBHOOK_SECRET=your-aircall-webhook-secret

# Business phone numbers for call classification
GAMEBALL_PHONE_NUMBERS=+61234567890,+61234567891
AUSA_HOOPS_PHONE_NUMBERS=+61234567892,+61234567893

# =============================================================================
# ACTIVECAMPAIGN INTEGRATION
# =============================================================================
# ActiveCampaign API credentials
ACTIVECAMPAIGN_BASE_URL=https://your-account.api-us1.com
ACTIVECAMPAIGN_API_TOKEN=your-activecampaign-api-token

# Pipeline configuration
ACTIVECAMPAIGN_SALES_PIPELINE_ID=your-sales-pipeline-id
ACTIVECAMPAIGN_GAMEBALL_TAG=gameball-lead
ACTIVECAMPAIGN_AUSA_HOOPS_TAG=ausa-hoops-lead

# =============================================================================
# SALES DASHBOARD SETTINGS
# =============================================================================
# Sync settings
SYNC_INTERVAL_MINUTES=15
CALL_DATA_RETENTION_DAYS=365
ENABLE_REAL_TIME_UPDATES=true

# Performance targets
DEFAULT_CALLS_PER_DAY_TARGET=20
DEFAULT_CONVERSION_RATE_TARGET=0.15

# Business hours (for call classification)
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=18
BUSINESS_TIMEZONE=Australia/Sydney

# =============================================================================
# SECURITY
# =============================================================================
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://your-domain.com
CRON_SECRET=your-cron-secret-key
WEBHOOK_SECRET=your-webhook-secret-key

# =============================================================================
# DEVELOPMENT
# =============================================================================
ENABLE_DEBUG_MODE=true
USE_MOCK_AIRCALL_DATA=false
USE_MOCK_ACTIVECAMPAIGN_DATA=false
LOG_LEVEL=debug
